<body>
    <div class=container-fluid>


        <form method="post" class="d-flex" asp-action="SearchMovie" asp-controller="Movie" method="POST">
            <input name="movieName" type="text" class="form-control me-2" type="search" placeholder="Search" id="movieName" aria-label="Search Movie">
            <button class="btn btn-primary" id="search-button" type="submit">Search</button>
        </form>
        <div class="row">
            @if (ViewBag.movieResults != null)
            {
                @foreach (var movie in ViewBag.movieResults)
                {
                    <div class="col-md-4">
                        <p class="text-center">@movie.name</p>
                        <div class="card">
                            <img  src="data:image/JPG;base64,@Convert.ToBase64String(movie.imageBinary, 0, movie.imageBinary.Length)" class="card-img-top" alt="...">
                            <div style="display : flex ;justify-content:space-between; margin:8px">

                            <span style="margin : 1px" class="badge rounded-pill bg-dark ">@movie.rating ⭐</span>
                                <span style="margin : 1px" class="badge rounded-pill bg-dark">@movie.genre</span>
                                <span style="margin : 1px" class="badge rounded-pill bg-dark">@movie.date.ToShortDateString()</span>

                            </div>


                            <div class="card-body">
                                <p class="card-text">@movie.summary</p>
                                <div style="display:flex ; justify-content:space-evenly">

                                    <a href=@movie.trailerURL role="button" class="btn btn-secondary btn-md">Trailer URL</a>
                                    <a asp-controller="Director" asp-action="GetDirector" asp-route-id="@movie.directorId" role="button" class="btn btn-secondary btn-md">Director Details</a>
                                   <a asp-controller="Movie" asp-action="GetMovie" asp-route-id="@movie.movieId" role="button" class="btn btn-secondary btn-md">Movie Details</a>
                                </div>
                            </div>
                        </div>
                    </div>



                }
            }
        </div>
    </div>

</body>
